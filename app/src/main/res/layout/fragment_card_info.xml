<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <View
            android:id="@+id/card_info_divider"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/grey_300"
            android:layout_marginLeft="96dp"
            android:layout_marginRight="96dp"
            android:layout_centerInParent="true"/>


    <com.vinaygaba.creditcardview.CreditCardView
            android:id="@+id/card_preview"
            android:layout_width="match_parent"
            android:layout_height="196dp"
            android:background="@drawable/cardbackground_plain"
            android:layout_above="@id/card_info_divider"
            android:layout_marginLeft="32dp"
            android:layout_marginRight="32dp"
            android:layout_marginBottom="16dp"
            app:isEditable="false"/>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginRight="32dp"
            android:layout_marginLeft="32dp"
            android:layout_below="@id/card_info_divider"
            android:orientation="vertical"
            android:background="@color/grey_200">

    </LinearLayout>

</RelativeLayout>